<Window x:Class="Lab2_WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab2_WpfApp1"
        mc:Ignorable="d"
        Title="Лабораторна робота №2"
        WindowState="Maximized" Height="1080" Width="1920">

    <Window.Resources>
        <Style TargetType="{x:Type TextBox}">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="HorizontalContentAlignment" Value="Right"/>
        </Style>
        <Style TargetType="{x:Type Button}">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="24"/>
        </Style>
        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="30"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="{x:Type GroupBox}">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="24"/>
        </Style>
    </Window.Resources>

    <TabControl Name ="MainTabControl" SelectionChanged="TabControl_SelectionChanged">
        <TabItem Name ="CreateMatrix" Header="Create Matrix">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0">
                        <TextBlock Text="Matrix A:" TextAlignment="Center" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                        <TextBox x:Name="RowsA" Height="50" Text="2" MinWidth="50" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" HorizontalAlignment="Stretch" TextChanged="RowsA_TextChanged"/>
                        <TextBlock Text="x" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBox x:Name="ColsA" Height="50" Text="2" MinWidth="50" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Stretch" TextChanged="ColsA_TextChanged"/>
                        <Button Content="Create MyMatrix A" Height="50" Background="PaleGreen" Click="GenerateA_Click" HorizontalAlignment="Stretch"/>
                    </StackPanel>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <TextBlock Text="Input" HorizontalAlignment="Center" Grid.Column="0"/>
                        <UniformGrid x:Name="MatrixAGrid" Rows="2" Columns="2" Margin="15,15,15,15" Grid.Column="0" Grid.Row="1">
                            <TextBox x:Name="ElementA11" MinWidth="50" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                            <TextBox x:Name="ElementA12" MinWidth="50" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                            <TextBox x:Name="ElementA21" MinWidth="50" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                            <TextBox x:Name="ElementA22" MinWidth="50" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                        </UniformGrid>
                        <TextBlock Text="Result" HorizontalAlignment="Center" Grid.Column="2"/>
                        <TextBlock Name="ResultA" HorizontalAlignment="Center" Grid.Column="2" Grid.Row="1"/>
                    </Grid>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="2">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,0,15,0">
                            <TextBlock Text="Get element from matrix A:" TextAlignment="Center" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                            <TextBlock Text="[" FontSize="40" TextAlignment="Center" HorizontalAlignment="Stretch" VerticalAlignment="Top"/>
                            <TextBox x:Name="AGetIndexRow" TextChanged="GetA_TextChanged" MinWidth="50" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" HorizontalAlignment="Stretch"/>
                            <TextBlock Text="," VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="3"/>
                            <TextBox x:Name="AGetIndexCol" TextChanged="GetA_TextChanged" MinWidth="50" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Stretch"/>
                            <TextBlock Text="]=" FontSize="40" TextAlignment="Center" HorizontalAlignment="Stretch" VerticalAlignment="Top"/>
                            <TextBlock x:Name="AGetElement" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="15,0,0,0">
                            <TextBlock Text="Set element for matrix A:" TextAlignment="Center" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                            <TextBlock Text="[" FontSize="40" TextAlignment="Center" HorizontalAlignment="Stretch" VerticalAlignment="Top"/>
                            <TextBox x:Name="ASetIndexRow" TextChanged="SetA_TextChanged" MinWidth="50" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" HorizontalAlignment="Stretch"/>
                            <TextBlock Text="," VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="3"/>
                            <TextBox x:Name="ASetIndexCol" TextChanged="SetA_TextChanged" MinWidth="50" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Stretch"/>
                            <TextBlock Text="]=" FontSize="40" TextAlignment="Center" HorizontalAlignment="Stretch" VerticalAlignment="Top"/>
                            <TextBox x:Name="ASetElement" TextChanged="SetA_TextChanged" MinWidth="50" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Stretch"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="3">
                        <TextBlock Text="Matrix B:" TextAlignment="Center" HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.Column="0"/>
                        <TextBox x:Name="RowsB" Text="2" MinWidth="50" Height="50" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" HorizontalAlignment="Stretch" Grid.Column="1" TextChanged="RowsB_TextChanged"/>
                        <TextBlock Text="x" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="2"/>
                        <TextBox x:Name="ColsB" Text="2" MinWidth="50" Height="50" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Stretch" Grid.Column="3" TextChanged="ColsB_TextChanged"/>
                        <Button Content="Create MyMatrix B" Height="50" Background="PaleGreen" Click="GenerateB_Click" HorizontalAlignment="Stretch" Grid.Column="4"/>
                    </StackPanel>

                    <Grid Grid.Row="4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <TextBlock Text="Input" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="0" Grid.Row="0"/>
                        <UniformGrid x:Name="MatrixBGrid" Rows="2" Columns="2" Margin="15" Grid.Column="0" Grid.Row="1">
                            <TextBox x:Name="ElementB11" MinWidth="50" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                            <TextBox x:Name="ElementB12" MinWidth="50" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                            <TextBox x:Name="ElementB21" MinWidth="50" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                            <TextBox x:Name="ElementB22" MinWidth="50" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                        </UniformGrid>
                        <TextBlock Text="Result" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="1" Grid.Row="0"/>
                        <TextBlock Name="ResultB" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="1" Grid.Row="1">
                        </TextBlock>
                    </Grid>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="5">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,0,15,0">
                            <TextBlock Text="Get element from matrix B:" TextAlignment="Center" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                            <TextBlock Text="[" FontSize="40" TextAlignment="Center" HorizontalAlignment="Stretch" VerticalAlignment="Top"/>
                            <TextBox x:Name="BGetIndexRow" MinWidth="50" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" HorizontalAlignment="Stretch" TextChanged="GetB_TextChanged"/>
                            <TextBlock Text="," VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="3"/>
                            <TextBox x:Name="BGetIndexCol" MinWidth="50" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Stretch" TextChanged="GetB_TextChanged"/>
                            <TextBlock Text="]=" FontSize="40" TextAlignment="Center" HorizontalAlignment="Stretch" VerticalAlignment="Top"/>
                            <TextBlock x:Name="BGetElement" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="15,0,0,0">
                            <TextBlock Text="Set element for matrix B:" TextAlignment="Center" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                            <TextBlock Text="[" FontSize="40" TextAlignment="Center" HorizontalAlignment="Stretch" VerticalAlignment="Top"/>
                            <TextBox x:Name="BSetIndexRow" MinWidth="50" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" HorizontalAlignment="Stretch" TextChanged="SetB_TextChanged"/>
                            <TextBlock Text="," VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="3"/>
                            <TextBox x:Name="BSetIndexCol" MinWidth="50" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Stretch" TextChanged="SetB_TextChanged"/>
                            <TextBlock Text="]=" FontSize="40" TextAlignment="Center" HorizontalAlignment="Stretch" VerticalAlignment="Top"/>
                            <TextBox x:Name="BSetElement" MinWidth="50" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Stretch" TextChanged="SetB_TextChanged"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </TabItem>

        <TabItem Name ="MatrixOperations" Header="Matrix Operations">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0">
                        <TextBlock Name="MatrixAAddition" Text="Matrix A:" TextAlignment="Center" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                        <TextBlock Text="+" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBlock Name="MatrixBAddition" Text="Matrix B:" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBlock Text="=" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBlock Name="ResultAddition" Text="Result" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1">
                        <TextBlock Name="MatrixAMultiplication" Text="Matrix A:" TextAlignment="Center" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                        <TextBlock Text="*" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBlock Name="MatrixBMultiplication" Text="Matrix B:" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBlock Text="=" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBlock Name="ResultMultiplication" Text="Result" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </StackPanel>

                    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Name="MatrixATransponedCopy" Grid.Row="0" Grid.Column="0" Text="Matrix A:" TextAlignment="Center" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                        <Button Name="MatrixAGetTransponedCopy" Click="MatrixAGetTransponedCopy_Click" Background="PaleGreen" Grid.Row="1" Grid.Column="0" Content="TransponedCopy" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                        <TextBlock Name="MatrixATransponeMe" Grid.Row="0" Grid.Column="1" Text="Matrix A:" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <Button Name="MatrixAGetTransponeMe" Click="MatrixAGetTransponeMe_Click" Background="PaleGreen" Grid.Row="1" Grid.Column="1" Content="TransponeMe" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                        <TextBlock Name="MatrixBTransponedCopy" Grid.Row="0" Grid.Column="2" Text="Matrix B:" TextAlignment="Center" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                        <Button Name="MatrixBGetTransponedCopy" Click="MatrixBGetTransponedCopy_Click" Background="PaleGreen" Grid.Row="1" Grid.Column="2" Content="TransponedCopy" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                        <TextBlock Name="MatrixBTransponeMe" Grid.Row="0" Grid.Column="3" Text="Matrix B:" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <Button Name="MatrixBGetTransponeMe" Click="MatrixBGetTransponeMe_Click" Background="PaleGreen" Grid.Row="1" Grid.Column="3" Content="TransponeMe" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                    </Grid>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="3">
                        <TextBlock Name="MatrixADet" Text="Matrix A Determinant:" TextAlignment="Center" Margin ="0,0,100,0" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                        <TextBlock Name="MatrixBDet" Text="Matrix B Determinant:" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </TabItem>
        <TabItem Name ="MyTime" Header="MyTime">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <StackPanel VerticalAlignment="Top">
                    <TextBlock Name="Time" Text="0:00:00" HorizontalAlignment="Center" FontWeight="ExtraBold" FontSize="40"></TextBlock>
                    <Grid>
                        <Ellipse Width="600" Height="600" Stroke="Black" StrokeThickness="4"/>
                        <Canvas Name="DialCanvas" Width="600" Height="600" IsHitTestVisible="False"/>

                        <Rectangle Name="HourHand" Width="6" Height="150" Fill="Black" Margin="0,0,0,150"
                           RenderTransformOrigin="0.5,1">
                            <Rectangle.RenderTransform>
                                <RotateTransform Angle="0"/>
                            </Rectangle.RenderTransform>
                        </Rectangle>

                        <Rectangle Name="MinuteHand" Width="4" Height="230" Fill="Black" Margin="0,0,0,230"
                           RenderTransformOrigin="0.5,1">
                            <Rectangle.RenderTransform>
                                <RotateTransform Angle="0"/>
                            </Rectangle.RenderTransform>
                        </Rectangle>

                        <Rectangle Name="SecondHand" Width="2" Height="240" Fill="Red" Margin="0,0,0,240"
                           RenderTransformOrigin="0.5,1">
                            <Rectangle.RenderTransform>
                                <RotateTransform Angle="0"/>
                            </Rectangle.RenderTransform>
                        </Rectangle>
                    </Grid>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-50,0,0">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Bottom">
                            <StackPanel Orientation="Horizontal">
                                <TextBox Name="Hours" MinWidth="40" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <TextBox Name="Minutes" MinWidth="40" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <TextBox Name="Seconds" MinWidth="40" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </StackPanel>
                            <Button Name="Constructor" Click="Constructor_Click" Background="PaleGreen" Content="Set Time" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel VerticalAlignment="Bottom">
                            <TextBox Name="Secs" MinWidth="40" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            <Button Name="ConstructorSec" Click="ConstructorSec_Click" Background="PaleGreen" Content="Set Time" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel VerticalAlignment="Bottom">
                            <TextBlock Name="ToSecSinceMidnightText" Text="" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Button Name="ToSecSinceMidnight" Click="ToSecSinceMidnight_Click" Background="PaleGreen" Content="ToSecSinceMidnight" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </StackPanel>
                        <Button Name="AddSecond" Click="AddSecond_Click" Background="PaleGreen" Content="AddSecond" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
                        <Button Name="AddMinute" Click="AddMinute_Click" Background="PaleGreen" Content="AddMinute" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
                        <Button Name="AddHour" Click="AddHour_Click" Background="PaleGreen" Content="AddHour" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>

                        <StackPanel VerticalAlignment="Bottom">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBox Name="SecondsAdd" MinWidth="40" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </StackPanel>
                            <Button Name="AddSeconds" Click="AddSeconds_Click" Background="PaleGreen" Content="AddSeconds" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel>
                            <TextBlock Name="DifferenceText" Text="" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBox Name="HoursDiff" MinWidth="40" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <TextBox Name="MinutesDiff" MinWidth="40" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <TextBox Name="SecondsDiff" MinWidth="40" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </StackPanel>
                            <Button Name="Difference" Click="Difference_Click" Background="PaleGreen" Content="Difference" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel VerticalAlignment="Bottom">
                            <TextBlock Name="WhatLessonText" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Button Name="WhatLesson" Click="WhatLesson_Click" Background="PaleGreen" Content="WhatLesson" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </TabItem>
    </TabControl>
</Window>